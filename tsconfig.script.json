// tsconfig.script.json
{
    "compilerOptions": {
        "target": "ES2022",
        "module": "NodeNext", // Doit correspondre à "type": "module" dans package.json
        "moduleResolution": "NodeNext",
        "esModuleInterop": true,
        "strict": true,
        "skipLibCheck": true
    },
    "include": [
        "**/*.ts" // Inclut tous les fichiers TS à la racine et sous-dossiers
    ],
    "exclude": [
        "node_modules",
        ".nuxt"
    ]
}